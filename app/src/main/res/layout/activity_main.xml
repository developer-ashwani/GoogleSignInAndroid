<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/add_profile_pic"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/basketball" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Mame" />

            <TextView
                android:id="@+id/add_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Email Address" />

            <Button
                android:id="@+id/google_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout Button" />
        </LinearLayout>


    </LinearLayout>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"></com.google.android.gms.common.SignInButton>


</LinearLayout>